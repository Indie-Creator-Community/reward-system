{
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"build": "pnpm with-env turbo run build",
		"dev": "pnpm with-env turbo dev --parallel",
		"clean": "find . -name node_modules -o -name .next -o -type d -prune | xargs rm -rf",
		"lint": "turbo run lint",
		"start": "pnpm with-env turbo run start",
		"format": "prettier --write \"**/*.{ts,tsx,md}\"",
		"with-env": "dotenv -e .env --"
	},
	"devDependencies": {
		"dotenv-cli": "^7.0.0",
		"prettier": "latest",
		"turbo": "latest"
	}
}
